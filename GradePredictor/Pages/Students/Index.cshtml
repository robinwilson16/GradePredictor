@page "{academicYear}/{courseCode}/{groupCode}"
@model GradePredictor.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].StudentRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Forename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].CourseCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].GroupCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].CompletionStatusCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].CompletionStatusName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].PredictedToAchieve)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].PredictedToAchieveBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].PredictedGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Student)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentRef)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Forename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletionStatusCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletionStatusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PredictedToAchieve)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PredictedToAchieveBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PredictedGrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.StudentDetailID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.StudentDetailID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.StudentDetailID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
