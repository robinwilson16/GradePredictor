<!--Loading Area HTML showing loading animation-->
<div id="LoadingAnimation" class="container h-100 position-absolute fixed-top" style="display: none;">
    <div class="row h-100 justify-content-center align-items-center mx-auto">
        <div class="col text-center LoadingArea">
            Loading <i class="fas fa-spinner fa-spin"></i>
        </div>
    </div>
</div>

<div class="modal fade" id="LoadingModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="LoadingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body text-center Spinner">
                Loading <i class="fas fa-spinner fa-spin"></i>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalNote" data-bs-backdrop="static" data-bs-keyboard="false" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="ModalNoteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalNoteLabel"><i class="fas fa-sticky-note"></i> <span class="title">Prediction for Student</span></h5>
                <button type="button" class="close btn-close" data-bs-dismiss="modal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md">
                            <textarea id="ActiveNoteText" name="ActiveNoteText" class="form-control ActiveNoteText"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-dismiss="modal"><i class="fas fa-sticky-note"></i> OK</button>
                <button type="button" class="btn btn-danger ClearCommentButton"><i class="fas fa-trash-alt"></i> Clear Note</button>
            </div>
        </div>
    </div>
</div>