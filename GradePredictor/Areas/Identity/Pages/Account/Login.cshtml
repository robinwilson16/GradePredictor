@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/HammersmithCampus.jpg" alt="Photo of the front of Hammersmith College Campus">
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="d-none d-lg-block col-xl-3 col-lg-1">

        </div>
        <div class="col-xl-6 col-lg-10 col-md">
            <div class="LoginBox">
                <div class="card Dark">
                    <h3 class="card-title"><i class="fas fa-user-check"></i> Log Into the Grade Predictor</h3>
                    <div class="card-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-md">
                                    <section>
                                        <h4>College staff should enter their Windows Username whilst Subcontractors should enter their UKPRN number</h4>
                                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <div class="form-group row">
                                                <label asp-for="Input.Email"></label>
                                                <input asp-for="Input.Email" class="form-control" />
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                            <div class="form-group row">
                                                <label asp-for="Input.Password"></label>
                                                <input asp-for="Input.Password" class="form-control" />
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm">
                                                    <div class="custom-control custom-switch">
                                                        <input asp-for="Input.RememberMe" class="form-control custom-control-input" />
                                                        <label asp-for="Input.RememberMe" class="col-sm-10 custom-control-label"></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-md d-md-block d-sm-none">

                                                </div>
                                                <div class="col-md-4 text-center">
                                                    <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-sign-in-alt"></i> Log In</button>
                                                </div>
                                                <div class="col-md d-md-block d-sm-none">

                                                </div>
                                            </div>
                                            @*<div class="form-group row">
                                                <div class="col-md text-left">
                                                    <p>
                                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                                    </p>
                                                </div>
                                            </div>*@
                                        </form>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-none d-lg-block col-xl-3 col-lg-1">

        </div>
    </div>
</div>

